limited-cell(width = 200px)
  max-width width
  position relative
  overflow hidden
  white-space nowrap
  display inline-block
  text-overflow ellipsis

.panel
  width 890px

.logo
  margin-bottom 10px
  display block
  width 100%

.cell
  vertical-align middle
  &-favourite
    width 50px
    text-align center
    .btn
      display inline-block
      vertical-align middle
      padding 3px 6px
      i
        color #ccc;
    .btn-warning
      i
        color #fff
  &-number
    text-align center
  &-sender
    white-space nowrap
    .btn
      display inline-block
      vertical-align middle
      margin-right 10px
      padding 3px 6px
    .text
      limited-cell()
      display inline-block
      vertical-align middle
  &-body
    .text
      limited-cell(400px)

.t-row
  cursor pointer

.content
  max-width 800px
  margin 0 auto

.modal-window
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 9999
  text-align center
  &:before
    content ''
    display inline-block
    vertical-align middle
    height 100%
  &-overlay
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0,0,0,.7)
    z-index 9999
  &-in
    vertical-align middle
    display inline-block
    width 80%
    max-width 800px
    background #fff
    border-radius 5px
    text-align left
    padding 10px
    position relative
    z-index 99999
  .body-desc
    margin-bottom 0

